type Query {
  appointments: [Appointment!]!
  appointmentsByDay(date: String!): DailyAppointments!
  availableTimesByDay(date: String!): AvailableTimes!
}

type Mutation {
  createAppointment(input: NewAppointmentInput!): Appointment!
  deleteAppointment(id: ID!): Boolean!
}

type Appointment {
  id: ID!
  clientName: String!
  """
  Format: YYYY-MM-DD
  """
  date: String!
  """
  Format: HH:MM
  """
  time: String!
}

type DailyAppointments {
  date: String!
  groups: [AppointmentGroup!]!
}

type AvailableTimes {
  date: String!
  groups: [AvailableTimeGroup!]!
}

type AvailableTimeGroup {
  period: TimeOfDay!
  times: [TimeSlot!]!
}

type TimeSlot {
  time: String!
  isAvailable: Boolean!
  clientName: String
}

type AppointmentGroup {
  period: TimeOfDay!
  appointments: [Appointment!]!
}

enum TimeOfDay {
  """
  09:00 - 11:59
  """
  MORNING
  """
  12:00 - 17:59
  """
  AFTERNOON
  """
  18:00 - 21:59
  """
  EVENING
}

input NewAppointmentInput {
  clientName: String!
  date: String!
  time: String!
}
